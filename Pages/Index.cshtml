<!--Code with CSS Bootstrap classes-->
<div class="container mt-5">
    <div class="text-center border p-4 rounded shadow">
        <h1 class="display-4 mb-4">Welcome to Midnight's Weather App</h1>
        <form method="post" class="form-inline justify-content-center">
            <div class="form-group mb-2">
                <input type="text" class="form-control" name="City" id="City" placeholder="Enter city name" />
            </div>
            <button type="submit" class="btn btn-primary mb-2 ms-2">Get Data</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3" role="alert">
                @Model.ErrorMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.City))
        {
            <div class="card mt-4 shadow-sm">
                <div class="card-header text-white text-center" style="background: linear-gradient(135deg, #4e73df, #a1c4fd);">
                    Weather in @Model.City, @Model.Country
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Left column for weather icon -->
                        <div class="col-md-4 d-flex align-items-center justify-content-center" style="min-height: 150px;">
                            <img src="@Model.Icon" alt="Weather icon" class="img-fluid" style="min-width: 100px;" />
                        </div>
                        <!-- Right column for weather details -->
                        <div class="col-md-8">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Temperature: @Model.Temp &deg;C</li>
                                <li class="list-group-item">Feels Like: @Model.FeelsLike &deg;C</li>
                                <li class="list-group-item">Humidity: @Model.Humidity %</li>
                                <li class="list-group-item">Wind Speed: @Model.WindSpeed km/h</li>
                                <li class="list-group-item">Description: @Model.Description</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

